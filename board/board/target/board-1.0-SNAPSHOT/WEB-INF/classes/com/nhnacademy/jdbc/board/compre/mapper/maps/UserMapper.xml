<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nhnacademy.jdbc.board.compre.mapper.UserMapper">
    <select id="selectUser" resultType="com.nhnacademy.jdbc.board.compre.domain.User">
        select *
        from Users
        where id = #{id}
    </select>

    <select id="selectUsers" resultType="com.nhnacademy.jdbc.board.compre.domain.User">
        select *
        from Users
    </select>

    <select id="doLogin" resultType="com.nhnacademy.jdbc.board.compre.domain.User">
        select *
        from Users
        where user_id = #{id} AND user_pw = #{password}
    </select>
</mapper>
